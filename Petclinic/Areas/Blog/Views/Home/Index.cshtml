@{
    ViewData["Title"] = "Blog";
}
@model BlogMainViewModel

<div class="container mt-4">
    @if (@Model != null)
    {
        <div class="hero-section jumbotron p-0 p-md-0 text-white rounded bg-dark">
            <img class="background-image" src="~/img/blog/hero.jpg">
            <div class="overlay col-md-6 px-0">
                <h1 class="display-4 font-italic">@Model.MainPost.Title</h1>
                <p class="lead d-none d-md-block my-3">@Model.MainPost.Body[..250] ...</p>
                <p class="lead mb-0">
                    <a href="#" class="text-white font-weight-bold">Continue reading...</a>
                </p>
            </div>
        </div>
        <div class="row mb-2">
            @foreach (var post in Model.FeaturedPosts)
            {
                <div class="col-md-6">
                    <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                        <div class="col p-4 d-flex flex-column position-static">
                            <h3 class="h-4 mb-2 text-primary font-weight-light text-center">@post.Title</h3>
                            <div class="mb-1 text-muted font-weight-bold">@post.Created.ToString("MMM yyyy")</div>
                            <p class="card-text mb-auto">@post.Body[..100] ...</p>
                            <a href="#" class="stretched-link">Continue reading</a>
                        </div>
                        <div class="col-auto d-none d-lg-block bd-placeholder-img">
                            <img src="~/img/blog/image-1.jpg" width="200" height="100%" style="object-fit: cover" />                            
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row mb-5">
            <div class="col-md-8 blog-main">
                <h3 class="pb-4 mb-4 font-italic border-bottom text-secondary">
                    More posts...
                </h3>
                @foreach (var post in Model.Posts)
                {
                    <div class="blog-post">
                        <h2 class="blog-post-title text-primary font-weight-light text-center">@post.Title</h2>
                        <p class="blog-post-meta">@post.Created.ToString("MMMM dd, yyyy") by <a href="#" class="text-info">@post.Author.FirstName</a></p>

                        <p>@post.Body</p>

                    </div>
                    <!-- /.blog-post -->
                }
                <nav class="blog-pagination">
                    <a class="btn btn-outline-primary" href="#">Older</a>
                    <a class="btn btn-outline-secondary disabled">Newer</a>
                </nav>

            </div><!-- /.blog-main -->

            <aside class="col-md-4 blog-sidebar">
                <div class="p-4 mb-3 bg-light rounded tags-background">
                    <h4 class="font-italic text-secondary">Tags</h4>
                    <p class="mb-0">
                        <span class="badge badge-primary">Cats</span>
                        <span class="badge badge-secondary">Dogs</span>
                        <span class="badge badge-success">Pet Care</span>
                        <span class="badge badge-danger">Birds</span>
                        <span class="badge badge-warning">Dogs</span>
                        <span class="badge badge-info">Exotic Animals</span>
                    </p>
                </div>

                <div class="p-4">
                    <h4 class="font-italic text-secondary">Archives</h4>
                    <ol class="list-unstyled mb-0">
                        @foreach (var archiveDate in Model.ArchiveDateList)
                        {
                            <li>
                                <a href="#">@archiveDate.ToString("MMMM yyyy")</a>
                            </li>
                        }
                    </ol>
                </div>
            </aside><!-- /.blog-sidebar -->

        </div>

      @*   @foreach (var post in Model.Posts)
        {
            <div>
                <div>
                    @post.Title
                    @post.Author.FirstName
                    @post.Author.LastName
                </div>
            </div>
        } *@
    }
</div>