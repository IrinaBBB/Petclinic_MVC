@model IEnumerable<PetClinic.Models.Shop.Product> 


<div class="container-fluid body pb-5">
    <div class="d-flex justify-content-between mb-3">
        <span class="d-flex flex-column justify-content-center">
            <h3 class="heading-main heading-small mb-0">Products</h3>
        </span>
        <a asp-action="Create" class="btn-add" data-toggle="tooltip" title="Add a new product">
            <img src="~/img/cta/plus.svg" alt="Add a new product" />
        </a>
    </div>
    <partial name="~/Views/Partials/_TempData.cshtml"/>
    <table id="products_table" class="table">
        <thead>
        <tr class="table-row header blue">
            <th class="cell sorting_desc_disabled sorting_asc_disabled">&nbsp;</th>
            <th class="cell">Title</th>
            <th class="cell">Price</th>
            <th class="cell">Producer</th>
            <th class="cell">Category</th>
            <th class="cell sorting_desc_disabled sorting_asc_disabled">&nbsp;</th>
            <th class="cell sorting_desc_disabled sorting_asc_disabled">&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-row">
                    <td class="cell left">
                        @if (item.ImageUrl != null)
                        {
                            <img id="chosen-image" src="/@item.ImageUrl" alt="@item.Name"/>
                        }
                        else
                        {
                            <img id="chosen-image" src="~/img/no-images.svg" alt="No Image"/>
                        }
                    </td>
                <td class="cell left" data-title="Name">
                    <a href="#">
                        @item.Name
                    </a>
                </td>
                    <td class="cell left" data-title="Price">
                        @item.Price
                    </td>
                    <td class="cell left" data-title="Producer">
                        @item.Producer
                    </td>
                    <td class="cell left" data-title="Category">
                        @item.Category.Name
                    </td>
                <td class="cell" data-title="">
                    <span class="rotating-btn edit">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id"></a>
                    </span>
                </td>
                <td class="cell" data-title="">
                    <span class="rotating-btn delete">
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id"></a>
                    </span>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#products_table').DataTable();
        });
    </script>
}