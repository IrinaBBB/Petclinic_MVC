@model IdentityRole
@{
    var title = (Model != null && !string.IsNullOrEmpty(Model.Id)) ? "Edit role" : "Create a role";
}
<div class="container body">
    <div class="col-lg-6">
        <div class="heading-image mb-3">
            <img src="~/img/vet.svg" alt="Petclinic logo"/>
            <h3 class="heading-main heading-small">
                @title
            </h3>
        </div>
        <form class="form" autocomplete="off" method="post">
            <input asp-for="@Model.Id" type="hidden" />
            <span class="text-danger d-block" asp-validation-for="Name"></span>
            <div class="form__group">
                <img class="form__icon" src="~/img/icons/apps.svg" alt="role icon"/>
                <input asp-for="Name" type="text" class="form__input" placeholder="Role Name" required/>
                <label asp-for="Name" class=form__label>Role Name</label>
            </div>
           
            <button type="submit" class="btn btn-light btn-block text-uppercase">
                <i class="bi bi-save-fill mr-2"></i>Save
            </button>
            <a type="button" asp-action="Index" class="btn bg-warning btn-block text-uppercase mt-4">
                <i class="bi bi-arrow-left mr-2"></i>Back To List
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        
    </script>
}