@model IdentityRole
@{
    var title = "Delete role";
}
<div class="container body">
    <div class="col-lg-6">
        <div class="heading-image mb-3">
            <img src="~/img/vet.svg" alt="Petclinic logo"/>
            <h3 class="heading-main heading-small">
                @title
            </h3>
        </div>
        <form class="form" autocomplete="off" method="post">
            <input asp-for="@Model.Id" type="hidden" />
            <span class="text-danger d-block" asp-validation-for="Name"></span>
            <div class="form__group">
                <img class="form__icon" src="~/img/icons/apps.svg" alt="role icon"/>
                <input asp-for="Name" type="text" class="form__input" placeholder="Role Name" required disabled/>
                <label asp-for="Name" class=form__label>Role Name</label>
            </div>        
            <button asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure you want to delete this?')" type="submit" class="btn text-light bg-danger btn-block text-uppercase">
                <i class="bi bi-trash3-fill mr-1"></i>Delete
            </button>
            <a type="button" asp-action="Index" class="btn bg-secondary text-white btn-block text-uppercase mt-4">
                <i class="bi bi-arrow-left mr-2"></i>Back To List
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        
    </script>
}