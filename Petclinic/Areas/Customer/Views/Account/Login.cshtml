@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@model PetClinic.Models.Shop.LoginViewModel
@using Microsoft.AspNetCore.Identity
@using PetClinic.Models.Clinic
@inject SignInManager<IdentityAppUser> _signInManager

@if(TempData["Message"] != null)
{
    <div class="alert my-2 alert-@TempData["Type"] alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="account__card pb-3">
    <img class="footer__logo" src="~/img/vet.svg" alt="Vet logo"/>
    <h3 class="heading-main heading-small">Login</h3>
    <form asp-action="Login" method="post"
          class="form" asp-route-returnUrl="@ViewData["ReturnUrl"]" role="form" autocomplete="off">

        <span class="text-danger d-block" asp-validation-for="Email"></span>
        <span class="text-danger d-block" asp-validation-for="Password"></span>
        <div class="form__group">
            <img class="form__icon" src="~/img/icons/at.svg" alt="user icon"/>
            <input asp-for="Email" id="email" type="email" class="form__input" placeholder="Email" required/>
            <label for="email" class=form__label>Email</label>
        </div>
        <div class="form__group">
            <img class="form__icon" src="~/img/icons/padlock.svg" alt="user icon"/>
            <input asp-for="Password" id="password" type="password" class="form__input" placeholder="Password" required/>
            <label for="password" class=form__label>Password</label>
        </div>
        <div class="form-check mb-3 float-right" style="font-size: 14px; margin-top: -10px; color: #777; text-transform: uppercase;">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
            <label class="form-check-label" for="defaultCheck1">
                Remember Me
            </label>
        </div>
        <button type="submit" class="btn btn-light btn-block text-uppercase">
            Login
        </button>
    </form>
    <div class="d-flex align-items-center" style="color: #777;">
        <span>Don't yet have an account? Please</span>
        <a class="btn btn-link px-1" asp-area="" asp-controller="Account" asp-action="Register">register here.</a>
    </div>
    <div class="d-flex align-items-center" style="color: #777; margin-top: -12px;">
        <span>Forgot your password?</span>
        <button type="button" class="btn btn-link" data-toggle="modal" data-target="#resetPasswordModal">
            Reset your password.
        </button>
    </div>
    @{
        var scheme = await _signInManager.GetExternalAuthenticationSchemesAsync();
        var loginProviders = scheme.ToList();
    }
    @if (loginProviders.Any())
    {
        <div class="d-flex align-items-center justify-content-center" style="color: #777; flex-direction: column">
            <span>login with</span>
            <form class="btn btn-link px-1"
                  asp-route-returnUrl="@ViewData["ReturnUrl"]"
                  asp-controller="Account" asp-action="ExternalLogin"
                  method="post"
                  role="form">
                @foreach (var provider in loginProviders)
               {    
                   
                   <button name="provider"
                            value="@provider.Name" 
                           type="submit" 
                           class="btn btn-link" 
                           style="margin-top: -7px; margin-left: -8px;"
                           title="Log in using your @provider.Name account">
                       <img style="width: 24px;" src="~/img/icons/@provider.Name-icon-circle-dark.svg" 
                            alt="facebook login icon"/>
                   </button>
               }
            </form>
        </div>
    }
</div>

<partial name="~/Views/Partials/Modals/_ResetModal.cshtml"/>