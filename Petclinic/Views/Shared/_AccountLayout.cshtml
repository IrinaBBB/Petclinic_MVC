<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Petclinic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/Swiper/swiper-bundle.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>

<header>
    <partial name="~/Views/Partials/_Nav.cshtml"/>
</header>

<main class="account" role="main">
    @RenderBody()
</main>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/Swiper/swiper-bundle.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    $(document).ready(function() {
        $('ul.navbar-nav').find('a[href="' + location.pathname + '"]')
            .closest('li').addClass('active');
    });
</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>