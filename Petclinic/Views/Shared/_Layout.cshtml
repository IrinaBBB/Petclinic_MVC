<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Petclinic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/lib/Swiper/swiper-bundle.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <partial name="~/Views/Partials/_Nav.cshtml"/>
</header>
<main role="main">
    <div class="container col-8">
        @if (TempData["Message"] != null)
        {
            <div class="alert my-2 alert-@TempData["Type"] alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    </div>
    @RenderBody()
</main>

<partial name="~/Views/Partials/_Footer.cshtml"/>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml"/>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/Swiper/swiper-bundle.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    $(document).ready(function() {
        $('ul.navbar-nav').find('a[href="' + location.pathname + '"]')
            .closest('li').addClass('active');
    });
</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>