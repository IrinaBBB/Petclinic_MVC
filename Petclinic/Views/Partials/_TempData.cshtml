@if (TempData["Message"] != null)
{
    <div class="alert my-2 alert-@TempData["Type"] alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div> 
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.options = {
            "debug": false,
            "positionClass": "toast-bottom-right",
            "onclick": null,
            "fadeIn": 300,
            "fadeOut": 1000,
            "timeOut": 5000,
            "extendedTimeOut": 1000
        }
    </script>
    @if ((string)TempData["Type"] == "danger")
    {
        <script type="text/javascript">
            toastr.error('@TempData["Message"]');
        </script>
    } else if ((string)TempData["Type"] == "warning")
    {
        <script type="text/javascript">
            toastr.warning('@TempData["Message"]');
        </script>
    } else if ((string)TempData["Type"] == "success")
    {
        <script type="text/javascript">
            toastr.success('@TempData["Message"]');
        </script>
    }
}


